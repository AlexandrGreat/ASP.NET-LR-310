@* This project is just modificated LR10 project *@

@{
    ViewData["Title"] = "Validation";
}

@model LR10.Models.RegistrationModel

<!doctype html>
<html>
<head>
    <title>LR11</title>
    <meta charset="utf-8" />
</head>
<body>
    <h3>Please, input following data to start</h3>
    <form method="post">
        <div asp-validation-summary="All"></div>
        <p>
            <label asp-for="Name" >Name, surname:</label><br />
            <input type="text" asp-for="Name" />
        </p>
        <p>
            <label asp-for="Email" >Email:</label><br />
            <input type="text" asp-for="Email" />
        </p>
        <p>
            <label asp-for="Date" >Date:</label><br />
            <input type="date" asp-for="Date" />
        </p>
        <label asp-for="Product">Select product:</label><br />
        <select asp-for="Product">
            <option value="JavaScript">JavaScript</option>
            <option value="C#">C#</option>
            <option value="Java">Java</option>
            <option value="Python">Python</option>
            <option value="Basics">Basics</option>
        </select>
        <p>
            <input type="submit" value="send!" />
        </p>
    </form>

    <script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>