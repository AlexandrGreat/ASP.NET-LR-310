@model IEnumerable<LR12.Models.CompanyModel>

<h2>List of companies</h2>
<p><a asp-action="Create">Create company</a></p>
<table class="table">
    <tr><th>Name</th><th>Workers</th><th></th><th></th></tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Workers</td>
            <td><a asp-action="Edit" asp-controller="Home" asp-route-id="@item.Id">Edit</a></td>
            <td><form asp-controller="Home" asp-action="Delete" method="post" asp-route-id="@item.Id"><input type="submit"value="Delete"/></form></td>
        </tr>
    }
</table>