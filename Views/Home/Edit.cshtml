@model LR12.Models.UserModel

<h2>Edit user</h2>
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <p>
        <label asp-for="Name">Name</label><br />
        <input type="text" asp-for="Name" />
    </p>
    <p>
        <label asp-for="Surname">Surname</label><br />
        <input type="text" asp-for="Surname" />
    </p>
    <p>
        <label asp-for="Age">Age</label><br />
        <input type="text" asp-for="Age" />
    </p>
    <input type="submit" value="Save">
</form>